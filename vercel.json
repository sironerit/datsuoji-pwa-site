{
  "functions": {
    "api/improve-text.js": {
      "maxDuration": 30
    },
    "api/analyze-text.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/ads.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/analysis",
      "destination": "/analysis.html"
    },
    {
      "source": "/learning",
      "destination": "/learning.html"
    },
    {
      "source": "/stats", 
      "destination": "/stats.html"
    }
  ]
}